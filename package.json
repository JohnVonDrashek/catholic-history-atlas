{
  "name": "catholic-history-atlas",
  "description": "An interactive Catholic history atlas exploring the Christian world through time with timeline and map views, featuring saints, councils, and major events from the early Church to modern times",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "lint:data": "npm run lint:duplicates && npm run lint:centuries",
    "validate": "npm run lint && npm run test:run && npm run lint:data",
    "lint:images": "node verify-images.js",
    "lint:duplicates": "node check-duplicates.js",
    "lint:centuries": "node check-century-placement.js",
    "check:saint": "node check-saint-exists.js",
    "check:council": "node check-council-exists.js",
    "check:basilica": "node check-basilica-exists.js",
    "lint:basilicas": "node check-basilica-duplicates.js",
    "generate:indexes": "node generate-indexes.js",
    "add:council": "node add-council.js",
    "find:images": "node find-images.js find",
    "fix:images": "node find-images.js fix",
    "fix:images:interactive": "node find-images.js interactive",
    "fix:pope-images": "node fix-pope-images.js",
    "fix:wikipedia": "node fix-wikipedia-urls.js",
    "integrate:mycatholic": "node integrate-mycatholic-life.js",
    "integrate:mycatholic:cleanup": "node integrate-mycatholic-life.js --remove-all",
    "lint:newadvent": "node lint-new-advent.js",
    "lint:newadvent:fix": "node lint-new-advent.js --remove-invalid",
    "find:newadvent": "node find-new-advent-urls.js",
    "lint:newadvent:add": "node lint-new-advent.js --add-missing",
    "prepare": "husky"
  },
  "dependencies": {
    "date-fns": "^3.6.0",
    "leaflet": "^1.9.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^6.26.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/leaflet": "^1.9.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.5.3",
    "vite": "^5.4.2",
    "vitest": "^4.0.15"
  }
}
